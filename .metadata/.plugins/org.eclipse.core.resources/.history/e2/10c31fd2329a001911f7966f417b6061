package Aditya.Contest_29June;

import java.util.Scanner;

public class QB {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner s = new Scanner(System.in);

		String str = s.next();
		int N = str.length();

		int[][] arr = new int[N][N];

		for (int i = 0; i < N; i++) {
			for (int j = 0; j < N; j++) {
				if (i > j) {
					if (i - j == 1) {
						if (str.substring(i, j) == "*!" || str.substring(i, j) == "!*") {
							arr[i][j]++;
						}
					}

				}
			}
		}

	}

}
