package Aditya.Contest_29June;

import java.util.Arrays;
import java.util.Scanner;

public class QE {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner s = new Scanner(System.in);
		int N = s.nextInt();

		int maxsum = 0;

		int[] arr = new int[N];

		for (int i = 0; i < N; i++) {
			arr[i] = s.nextInt();

		}

		if (N == 0) {
			System.out.println(0);
			return;
		}

		for (int i = 1; i < N; i++) {
			int e = arr[i] + arr[i - 1];
			if (e > maxsum) {
				maxsum = e;
			}
		}

		// Arrays.sort(arr);

		int sum = arr[N - 1];
		int result = 0;

		for (int i = N - 2; i >= 0; i--) {
			sum += arr[i];
			result += sum;
		}

		System.out.println(result);

	}

}
